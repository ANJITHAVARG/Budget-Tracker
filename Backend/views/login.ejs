<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | Budget Manager</title>
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body class="purple lighten-5">
    <div class="row" style="margin: 0">
      <div class="col s12 m6 white" style="height: 100vh; padding: 40px">
        <h4 class="purple-text text-darken-2">Budget Manager</h4>

        <h5>Welcome Back</h5>
        <p>Please enter your credentials to log in.</p>

        <form id="loginForm">
          <div class="input-field">
            <input id="email" type="email" name="email" required />
            <label for="email">Email Address</label>
          </div>

          <div class="input-field">
            <input id="password" type="password" name="password" required />
            <label for="password">Password</label>
          </div>

          <p id="errorText" class="red-text"></p>

          <button type="submit" class="btn purple darken-2 waves-effect waves-light">
            LOGIN
          </button>
        </form>

        <p style="margin-top: 20px">
          Don't have an account?
          <a href="/signup" class="purple-text text-darken-2">Sign Up</a>
        </p>
      </div>

      <div class="col m6 hide-on-small-only purple lighten-3" style="height: 100vh; position: relative">
        <div class="center-align" style="position: absolute; top: 40%; width: 100%">
          <i class="material-icons white-text" style="font-size: 80px">trending_up</i>
          <h5 class="white-text">Track your Income & Expenses</h5>
        </div>
      </div>
    </div>

    <script src="/js/login.js"></script>
  </body>
</html>
